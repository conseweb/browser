<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/loading_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="240.0dip"
            android:layout_height="180.0dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loading_dialog_leba_shape_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/loading_process_dialog_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_gif" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220.0dip"
                android:text="正在为您努力加载..."
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>