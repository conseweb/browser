<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/loading_linear"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

         <include layout="@layout/title_dialog" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dip" >

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="10dp" >

                <RadioButton
                    android:id="@+id/hengping"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/checkbox_s"
                    android:paddingLeft="1dip"
                    android:text="选择横屏"
                    android:textColor="#ff999999"
                    android:textSize="16.0dip" />

                <RadioButton
                    android:id="@+id/shuping"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/checkbox_s"
                    android:paddingLeft="1dip"
                    android:text="选择竖屏"
                    android:textColor="#ff999999"
                    android:textSize="16.0dip" />

                <RadioButton
                    android:id="@+id/xitong"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/checkbox_s"
                    android:paddingLeft="1dip"
                    android:text="跟随系统"
                    android:textColor="#ff999999"
                    android:textSize="16.0dip" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/button_layout_height"
                android:layout_weight="1.0"
                android:background="@drawable/button_bg_dialog_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/textview"
                android:textSize="@dimen/button_text_size"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>