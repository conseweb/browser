<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_public" >
    </include>

    <LinearLayout
        android:id="@+id/failweblinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/loading_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/loading_view"
                android:layout_width="240.0dip"
                android:layout_height="250.0dip"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/loading_process_dialog_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loading_gif" />

                <TextView
                    android:id="@+id/loading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="220.0dip"
                    android:text="您还没有历史图片哦！"
                    android:textColor="@android:color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/loading_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="220.0dip"
                    android:paddingTop="25dip"
                    android:text="点击按钮立即生成二维码图片"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15.0sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/loading_Button"
                    android:layout_width="120.0dip"
                    android:layout_height="@dimen/button_layout_height"
                    android:background="@drawable/button_bg_blue_selector"
                    android:text="生成二维码" 
                   	android:textColor="@color/white"
                   	android:textSize="15dp"
                   	android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>